{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
<div class="header">
    <a class="button" href="/members/create">Cadastrar</a>
    <form action="/members" method="GET">
    <input
        type="text"
        name="filter"
        placeholder="Nome ou email"
        value={{filter}}
    >
    <button type="submit">Filtrar<button>
    </form>
    </div>

    <table width="100%">
        <thead>
            <tr>
                <th>Membro</th>
                <th>Email</th>
                <th>Altura</th>
                <th>Peso</th>
                <th>Ação</th>

            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>
                    <span style="background-image: url({{ member.avatar_url}})">
                    </span>
                    {{member.name}}
                </td>
                <td>{{member.email}}</td>
                <td>{{member.height}}</td>
                <td>{{member.weight}}</td>

                <td><a href="members/{{member.id}}">Acessar</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
    ></div>
    <div>

{% endblock content %}

